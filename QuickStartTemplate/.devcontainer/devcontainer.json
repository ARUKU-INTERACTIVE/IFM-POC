{
  "name": "Algorand Quick Start Dev",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "forwardPorts": [5173, 3001],
  "portsAttributes": {
  "5173": { "onAutoForward": "openBrowser" },
  "3001": { "onAutoForward": "notify", "visibility": "public" }
},
  "postCreateCommand": "npm ci || true",
  "postAttachCommand": {
    "start": "npm run dev:boot"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
